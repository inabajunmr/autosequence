{
  "manifest_version": 3,
  "name": "HTTP Request Sequence Recorder",
  "version": "1.0",
  "description": "Records HTTP requests and generates Mermaid sequence diagrams",
  
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "HTTP Sequence Recorder"
  }
  
}